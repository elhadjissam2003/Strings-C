//- Un programme pour trouver la longueur d'une chaîne de caractères sans utiliser la fonction strlen().
#include <stdio.h>
#include <string.h>
int main() {
    int l=0;
    char *c;
    puts("Donner une chaine :");
    gets(c);
    puts("La chaine est :");
    puts(c);
    for(int i=0;c[i]!='\0';i++){
        l++;
    }
    printf("La longeur est : %d",l);

      return 0;
}
